@model FoodOrderSite.Models.ViewModels.RestaurantSettingsViewModel
@{
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}
@{
    ViewBag.Title = "Restaurant Settings";
}
<h2 class="text-center mb-4">@ViewBag.Title</h2>

@if (TempData["RestaurantSuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["RestaurantSuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="Index" asp-controller="RestaurantSettings" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="RestaurantId" />
    <div class="row mb-4">
        <!-- Restaurant Name -->
        <div class="col-md-6 mb-3">
            <label asp-for="RestaurantName">Restaurant Name</label>
            <input type="text" class="form-control" asp-for="RestaurantName" />
            <span asp-validation-for="RestaurantName" class="text-danger"></span>
        </div>
        <!-- Restaurant Type -->
        <div class="col-md-6 mb-3">
            <label asp-for="RestaurantType">Restaurant Type</label>
            <input type="text" class="form-control" asp-for="RestaurantType" />
            <span asp-validation-for="RestaurantType" class="text-danger"></span>
        </div>
        <!-- Phone -->
        <div class="col-md-6 mb-3">
            <label asp-for="Phone">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <!-- Email -->
        <div class="col-md-6 mb-3">
            <label asp-for="Email">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <!-- City -->
        <div class="col-md-6 mb-3">
            <label asp-for="City">City</label>
            <input type="text" class="form-control" asp-for="City" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <!-- District -->
        <div class="col-md-6 mb-3">
            <label asp-for="District">District</label>
            <input type="text" class="form-control" asp-for="District" />
            <span asp-validation-for="District" class="text-danger"></span>
        </div>
        <!-- Address -->
        <div class="col-12 mb-3">
            <label asp-for="Address">Address</label>
            <input type="text" class="form-control" asp-for="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <!-- Description -->
        <div class="col-12 mb-3">
            <label asp-for="Description">Description</label>
            <textarea class="form-control" rows="3" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <!-- Image -->
        <div class="form-group">
            <label asp-for="ImageFile">Restaurant Image</label>
            <input asp-for="ImageFile" class="form-control" type="file" />
        </div>
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="mt-2">
                <p>Current Image:</p>
                <img src="@Model.Image" alt="Restaurant Image" style="max-width: 200px; border-radius: 8px;" />
            </div>
        }
    </div>

    <!-- Weekly operating hours -->
    <h4 class="mb-3 text-primary">Weekly Operating Hours</h4>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Day</th>
                    <th>Opening Time</th>
                    <th>Closing Time</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ScheduleItems.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.ScheduleItems[i].DayOfWeek
                            <input type="hidden" asp-for="ScheduleItems[i].DayOfWeek" />
                            <input type="hidden" asp-for="ScheduleItems[i].ScheduleId" />
                        </td>
                        <td>
                            <input type="time" class="form-control" asp-for="ScheduleItems[i].OpeningTime" />
                        </td>
                        <td>
                            <input type="time" class="form-control" asp-for="ScheduleItems[i].ClosingTime" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}