@model FoodOrderSite.Models.ViewModels.RestaurantSettingsViewModel

@{
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
    ViewBag.Title = "Restoran Ayarları";
}

<h2 class="text-center mb-4">@ViewBag.Title</h2>

<form asp-action="UpdateSettings" asp-controller="RestaurantSettings" method="post">
    <input type="hidden" asp-for="RestaurantId" />
    <input type="hidden" asp-for="UserId" />

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <label asp-for="RestaurantName"></label>
            <input asp-for="RestaurantName" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="District"></label>
            <input asp-for="District" class="form-control" />
        </div>
        <div class="col-12 mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="col-12 mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>
    </div>

    <!-- Haftalık Çalışma Saatleri -->
    <h4 class="mb-3 text-primary">Haftalık Çalışma Saatleri</h4>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Gün</th>
                    <th>Açılış Saati</th>
                    <th>Kapanış Saati</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Schedules.Count; i++)
                {
                    <tr>
                        <td>@Model.Schedules[i].DayOfWeek</td>
                        <td>
                            <input type="time" name="Schedules[@i].OpeningTime" class="form-control" value="@Model.Schedules[i].OpeningTime.ToString(@"hh\:mm")" />
                        </td>
                        <td>
                            <input type="time" name="Schedules[@i].ClosingTime" class="form-control" value="@Model.Schedules[i].ClosingTime.ToString(@"hh\:mm")" />
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">Güncelle</button>
    </div>
</form>
