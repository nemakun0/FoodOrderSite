@using FoodOrderSite.Models.ViewModels
@* @model OrderDetailsViewModel *@
@model FoodOrderSite.Models.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <!-- Başlık ve Anasayfaya Dön düğmesi -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-home me-2"></i>Return to Homepage
                </a>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Order Number:</strong> #@Model.Order.Id.ToString().Substring(0, 8).ToUpper()</p>
                            <p><strong>Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                            @if (Model.Order.Restaurant != null)
                            {
                                <p><strong>Restaurant:</strong> @Model.Order.Restaurant.RestaurantName</p>
                            }
                        </div>
                        <div class="col-md-6">
                            <p><strong>Status:</strong> <span class="badge bg-primary">@Model.OrderStatus</span></p>
                            <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
                            <p><strong>Payment Method:</strong> 
                                @if (Model.Order.PaymentMethod == "Cash")
                                {
                                    <span>Cash on Delivery</span>
                                }
                                else if (Model.Order.PaymentMethod == "CreditCard")
                                {
                                    <span>Credit Card</span>
                                }
                                else
                                {
                                    <span>@Model.Order.PaymentMethod</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Teslimat Adresi bilgileri -->
            @if (!string.IsNullOrEmpty(Model.Order.DeliveryAddress))
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Delivery Address</h5>
                    </div>
                    <div class="card-body">
                        <p>
                            <strong>Address Title:</strong> @Model.Order.AddressTitle<br />
                            <strong>Address:</strong> @Model.Order.DeliveryAddress<br />
                            <strong>District/City:</strong> @Model.Order.DeliveryDistrict / @Model.Order.DeliveryCity
                        </p>
                    </div>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Order Items</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.Price.ToString("C")</td>
                                        <td class="text-end">@((item.Price * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="3" class="text-end">Grand Total:</th>
                                    <th class="text-end">@Model.TotalAmount.ToString("C")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a asp-controller="Discover" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
            </div>
        </div>
    </div>
</div> 