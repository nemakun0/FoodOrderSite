@using FoodOrderSite.Models.ViewModels
@model CartPageViewModel

@{
    ViewData["Title"] = "Sepetiniz";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <!-- Başlık ve Alışverişe Devam Et düğmesi -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                 <h2 class="mb-0">@ViewData["Title"]</h2>
                 <a asp-controller="Discover" asp-action="Index" class="btn btn-outline-secondary">
                     <i class="fas fa-store me-2"></i>Alışverişe Devam Et
                 </a>
            </div>

            @if (Model.IsEmpty)
            {
                <div class="alert alert-info text-center" role="alert">
                    <h4 class="alert-heading"><i class="fas fa-shopping-cart me-2"></i>Sepetiniz Boş</h4>
                    <p>Henüz sepetinize ürün eklemediniz.</p>
                    <hr>
                    <p class="mb-0">
                        <a asp-controller="Discover" asp-action="Index" class="btn btn-primary">Restoranları Keşfet</a>
                    </p>
                </div>
            }
            else
            {
                <!-- Ana Checkout formu -->
                <form asp-controller="Cart" asp-action="Checkout" method="post" id="checkoutForm">
                    @Html.AntiForgeryToken()
                    
                    @foreach (var group in Model.RestaurantGroups)
                    {
                        <div class="card mb-4 shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Restoran: @group.RestaurantName</h5>
                            </div>
                            <div class="card-body p-0">
                                <ul class="list-group list-group-flush">
                                    @foreach (var item in group.Items)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap px-3 py-3">
                                            <!-- Sol Taraf: Ürün Resmi, Adı, Birim Fiyatı -->
                                            <div class="d-flex align-items-center me-3 mb-2 mb-md-0" style="flex: 1 1 250px;">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.FoodItemName" style="width: 50px; height: 50px; object-fit: cover; margin-right: 15px; border-radius: 4px;" />
                                                }
                                                <div>
                                                    <h6 class="my-0">@item.FoodItemName</h6>
                                                    <small class="text-muted">@item.UnitPrice.ToString("C")</small>
                                                </div>
                                            </div>

                                            <!-- Sağ Taraf: Miktar Kontrolleri, Toplam Fiyat, Kaldır Düğmesi -->
                                            <div class="d-flex align-items-center justify-content-end" style="flex: 1 1 300px;">

                                                <!-- Miktar Kontrolleri -->
                                                <div class="d-flex align-items-center me-3">
                                                    <!-- Azaltma butonu için normal link kullan, JavaScript problemi yaşamamak için -->
                                                    <a href="@Url.Action("DecrementItem", "Cart", new { foodItemId = item.FoodItemId })" class="btn btn-sm btn-outline-secondary" aria-label="Azalt">-</a>
                                                    
                                                    <span class="mx-2 fw-bold" style="min-width: 25px; text-align: center;">@item.Quantity</span> 
                                                    
                                                    <a href="@Url.Action("IncrementItem", "Cart", new { foodItemId = item.FoodItemId })" class="btn btn-sm btn-outline-secondary" aria-label="Artır">+</a>
                                                </div>

                                                <!-- Toplam Fiyat -->
                                                <span class="fw-bold text-nowrap me-3" style="min-width: 80px; text-align: right;">@item.TotalPrice.ToString("C")</span>

                                                <!-- Kaldır Düğmesi - JavaScript ile çalışacak şekilde düzeltildi -->
                                                <button type="button" class="btn btn-sm btn-outline-danger flex-shrink-0 remove-item-btn" 
                                                        data-food-id="@item.FoodItemId" title="Ürünü Kaldır">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </li>
                                    }
                                    <li class="list-group-item d-flex justify-content-between bg-light-subtle">
                                        <span class="fw-bold">Restoran Ara Toplamı:</span>
                                        <span class="fw-bold">@group.RestaurantSubtotal.ToString("C")</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    }

                    <!-- Toplam ve Ödeme bölümleri -->
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h4 class="mb-0">Genel Toplam:</h4>
                            <h4 class="mb-0 text-primary fw-bold">@Model.GrandTotal.ToString("C")</h4>
                        </div>
                    </div>

                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Ödeme Yöntemi</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="PaymentMethod" id="paymentCash" value="Cash" asp-for="PaymentMethod" checked>
                                    <label class="form-check-label" for="paymentCash">Kapıda Ödeme</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="PaymentMethod" id="paymentCreditCard" value="CreditCard" asp-for="PaymentMethod">
                                    <label class="form-check-label" for="paymentCreditCard">Kredi Kartı</label>
                                </div>
                            </div>

                            <!-- Kredi Kartı Form Bölümü -->
                            <div id="creditCardForm" class="mt-3" style="display: none;">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label for="CardHolderName" class="form-label">Kart Üzerindeki İsim</label>
                                        <input type="text" class="form-control" asp-for="CreditCard.CardHolderName" id="CardHolderName" placeholder="Kart üzerindeki isim" autocomplete="cc-name">
                                    </div>
                                    <div class="col-12">
                                        <label for="CardNumber" class="form-label">Kart Numarası</label>
                                        <input type="text" class="form-control" asp-for="CreditCard.CardNumber" id="CardNumber" placeholder="1234 5678 9012 3456" maxlength="19" autocomplete="cc-number">
                                        <small class="text-muted">Örnek: 1234 5678 9012 3456</small>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="ExpiryMonth" class="form-label">Ay</label>
                                        <select class="form-select" asp-for="CreditCard.ExpiryMonth" id="ExpiryMonth" autocomplete="cc-exp-month">
                                            <option value="">Ay</option>
                                            @for (int i = 1; i <= 12; i++)
                                            {
                                                <option value="@i.ToString("D2")">@i.ToString("D2")</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="ExpiryYear" class="form-label">Yıl</label>
                                        <select class="form-select" asp-for="CreditCard.ExpiryYear" id="ExpiryYear" autocomplete="cc-exp-year">
                                            <option value="">Yıl</option>
                                            @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                                            {
                                                <option value="@i">@i</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label for="Cvv" class="form-label">CVV</label>
                                        <input type="text" class="form-control" asp-for="CreditCard.Cvv" id="Cvv" placeholder="123" maxlength="3" autocomplete="cc-csc">
                                        <small class="text-muted">Kartın arkasındaki 3 haneli kod</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sipariş Tamamlama Butonu -->
                    <div class="d-grid gap-2">
                        <button class="btn btn-danger btn-lg py-3 mt-4" type="submit" id="submitOrderButton">
                            <i class="fas fa-shopping-cart me-2"></i>SİPARİŞİ TAMAMLA
                        </button>
                    </div>
                </form> <!-- Ana Checkout formu sonu -->
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Değişkenler
            var cashPayment = document.getElementById('paymentCash');
            var creditCardPayment = document.getElementById('paymentCreditCard');
            var creditCardForm = document.getElementById('creditCardForm');
            var form = document.getElementById('checkoutForm');
            var submitBtn = document.getElementById('submitOrderButton');

            // Kredi kartı form görünürlüğü
            function toggleCreditCardForm() {
                creditCardForm.style.display = creditCardPayment.checked ? 'block' : 'none';
            }

            // Başlangıçta ve radio butonlar değiştiğinde kontrol et
            toggleCreditCardForm();
            cashPayment.addEventListener('change', toggleCreditCardForm);
            creditCardPayment.addEventListener('change', toggleCreditCardForm);

            // Form gönderimi
            if (form && submitBtn) {
                submitBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <text>
                        // Kullanıcı giriş yapmamış, uyarı ver
                        alert('Siparişi tamamlamak için önce giriş yapmanız gerekmektedir.');
                        window.location.href = '@Url.Action("Index", "SignIn")';
                        return;
                        </text>
                    }
                    else
                    {
                        <text>
                        // Kredi kartı seçildiyse form alanlarını kontrol et
                        if (creditCardPayment && creditCardPayment.checked) {
                            var cardHolder = document.getElementById('CardHolderName');
                            var cardNumber = document.getElementById('CardNumber');
                            var expiryMonth = document.getElementById('ExpiryMonth');
                            var expiryYear = document.getElementById('ExpiryYear');
                            var cvv = document.getElementById('Cvv');
                            
                            // Kart sahibi adı
                            if (!cardHolder.value.trim()) {
                                alert('Lütfen kart üzerindeki ismi girin.');
                                cardHolder.focus();
                                return;
                            }
                            
                            // Kart numarası
                            var cleanedCardNum = cardNumber.value.replace(/\D/g, '');
                            if (!cleanedCardNum || cleanedCardNum.length !== 16) {
                                alert('Lütfen geçerli bir 16 haneli kart numarası girin.');
                                cardNumber.focus();
                                return;
                            }
                            
                            // Ay
                            if (!expiryMonth.value) {
                                alert('Lütfen son kullanma ayını seçin.');
                                expiryMonth.focus();
                                return;
                            }
                            
                            // Yıl
                            if (!expiryYear.value) {
                                alert('Lütfen son kullanma yılını seçin.');
                                expiryYear.focus();
                                return;
                            }
                            
                            // CVV
                            if (!cvv.value.trim() || cvv.value.length !== 3) {
                                alert('Lütfen geçerli bir 3 haneli CVV kodu girin.');
                                cvv.focus();
                                return;
                            }
                        }
                        
                        // Formu gönder
                        form.submit();
                        </text>
                    }
                });
            }
            
            // Kart numarası formatlama
            var cardNumberInput = document.getElementById('CardNumber');
            if (cardNumberInput) {
                cardNumberInput.addEventListener('input', function(e) {
                    // Sadece sayıları tut
                    var value = this.value.replace(/\D/g, '');
                    // 4'lü gruplara böl
                    var parts = [];
                    for (var i = 0; i < value.length; i += 4) {
                        parts.push(value.substring(i, i + 4));
                    }
                    // Grupları birleştir ve maksimum 16 karakter (19 karakter boşluklarla)
                    this.value = parts.join(' ').substring(0, 19);
                });
            }

            // CVV sadece rakam kabul etsin
            var cvvInput = document.getElementById('Cvv');
            if (cvvInput) {
                cvvInput.addEventListener('input', function(e) {
                    this.value = this.value.replace(/\D/g, '').substring(0, 3);
                });
            }
            
            // Ürün silme butonları
            document.querySelectorAll('.remove-item-btn').forEach(function(button) {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    var foodItemId = this.getAttribute('data-food-id');
                    var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    
                    // FormData oluştur
                    var formData = new FormData();
                    formData.append('foodItemId', foodItemId);
                    
                    // AJAX isteği gönder
                    fetch('/Cart/RemoveItem', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': token
                        }
                    })
                    .then(function(response) {
                        if (response.ok) {
                            window.location.reload();
                        } else {
                            console.error('Ürün silinemedi', response);
                        }
                    })
                    .catch(function(error) {
                        console.error('İstek hatası:', error);
                    });
                });
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}