@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Options</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            /* background-image: url('https://images.unsplash.com/photo-1490645935967-10de6ba17061?auto=format&fit=crop&w=1600&q=80'); */
            background-image: url('/images/bg-signup.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                z-index: 0;
            }

        .selection-container {
            display: flex;
            width: 90%;
            max-width: 1000px;
            gap: 30px;
            position: relative;
            z-index: 1;
        }

        .option-card {
            flex: 1;
            min-height: 500px;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            color: white;
            font-weight: 600;
            padding: 40px;
            box-sizing: border-box;
            text-align: center;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
            position: relative;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(8px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

            .option-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
            }

            .option-card::before {
                content: "";
                position: absolute;
                inset: 0;
                background: linear-gradient(135deg, rgba(74, 107, 255, 0.8) 0%, rgba(0, 0, 0, 0) 100%);
                z-index: -1;
                opacity: 0.8;
            }

            .option-card.customer::before {
                background: linear-gradient(135deg, rgba(16, 185, 129, 0.8) 0%, rgba(0, 0, 0, 0) 100%);
            }

        .option-icon {
            font-size: 80px;
            margin-bottom: 30px;
            background: rgba(255, 255, 255, 0.2);
            width: 120px;
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .option-title {
            font-size: 28px;
            margin-bottom: 20px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .option-description {
            font-size: 16px;
            font-weight: 400;
            opacity: 0.9;
            line-height: 1.6;
            margin-bottom: 40px;
            flex-grow: 1;
        }

        .option-button-container {
            width: 100%;
            margin-top: auto;
        }

        .option-button {
            width: 70%;
            padding: 10px 10px; /* Daha küçük buton için */
            background-color: white;
            color: #4a6bff;
            border: none;
            border-radius: 25px; /* Daha oval görünüm */
            font-size: 16px; 
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .customer .option-button {
            color: #10b981;
        }

        .option-button:hover {
            transform: scale(1.02);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .logo {
            position: absolute;
            top: 30px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 28px;
            font-weight: bold;
            color: white;
            z-index: 2;
            margin-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="logo">ForkBase</div>

    <div class="selection-container">
        <div class="option-card seller">
            <div class="option-icon">
                <i class="fas fa-store-alt"></i>
            </div>
            <h2 class="option-title">Become a Seller</h2>
            <p class="option-description">Create a seller account to reach millions of customers</p>
            <div class="option-button-container">
                <a asp-controller="SellerSignUp" asp-action="Index" class="option-button">Become a Seller</a>

            </div>
        </div>

        <div class="option-card customer">
            <div class="option-icon">
                <i class="fas fa-shopping-bag"></i>
            </div>
            <h2 class="option-title">Sign Up as Customer</h2>
            <p class="option-description">Create a customer account to discover thousands of products</p>
            <div class="option-button-container">
                <a asp-controller="CustomerSignUp" asp-action="Index" class="option-button">Become a Customer</a>

            </div>
        </div>
    </div>
</body>
</html>