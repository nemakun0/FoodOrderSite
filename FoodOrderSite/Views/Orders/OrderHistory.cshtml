@model FoodOrderSite.Models.ViewModels.CustomerOrderHistoryViewModel
@{
    ViewData["Title"] = "My Orders";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <div>
                    <a asp-controller="Discover" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-store me-2"></i>Continue Shopping
                    </a>
                </div>
            </div>

            <!-- Order Status Filters -->
            <div class="mb-4">
                <div class="btn-group w-100">
                    <a asp-action="OrderHistory" class="btn @(Model.CurrentFilter == null ? "btn-primary" : "btn-outline-primary")">
                        All Orders
                    </a>
                    <a asp-action="OrderHistory" asp-route-statusFilter="Pending" class="btn @(Model.CurrentFilter == "Pending" ? "btn-primary" : "btn-outline-primary")">
                        Pending
                    </a>
                    <a asp-action="OrderHistory" asp-route-statusFilter="Preparing" class="btn @(Model.CurrentFilter == "Preparing" ? "btn-primary" : "btn-outline-primary")">
                        Preparing
                    </a>
                    <a asp-action="OrderHistory" asp-route-statusFilter="Out for Delivery" class="btn @(Model.CurrentFilter == "Out for Delivery" ? "btn-primary" : "btn-outline-primary")">
                        Out for Delivery
                    </a>
                    <a asp-action="OrderHistory" asp-route-statusFilter="Delivered" class="btn @(Model.CurrentFilter == "Delivered" ? "btn-primary" : "btn-outline-primary")">
                        Delivered
                    </a>
                    <a asp-action="OrderHistory" asp-route-statusFilter="Cancelled" class="btn @(Model.CurrentFilter == "Cancelled" ? "btn-primary" : "btn-outline-primary")">
                        Cancelled
                    </a>
                </div>
            </div>

            @if (!Model.Orders.Any())
            {
                <div class="alert alert-info text-center" role="alert">
                    <h4 class="alert-heading"><i class="fas fa-history me-2"></i>No Orders Found</h4>
                    @if (Model.CurrentFilter == "Delivered")
                    {
                        <p>You don't have any delivered orders yet.</p>
                    }
                    else if (!string.IsNullOrEmpty(Model.CurrentFilter))
                    {
                        <p>You don't have any orders with the selected status.</p>
                    }
                    else
                    {
                        <p>You haven't placed any orders yet.</p>
                    }
                    <hr>
                    <p class="mb-0">
                        <a asp-controller="Discover" asp-action="Index" class="btn btn-primary">Discover Restaurants</a>
                    </p>
                </div>
            }
            else
            {
                <!-- Orders list -->
                <div class="accordion" id="ordersAccordion">
                    @foreach (var order in Model.Orders)
                    {
                        <div class="accordion-item mb-3 border rounded shadow-sm">
                            <h2 class="accordion-header" id="heading@(order.OrderShortId)">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapse@(order.OrderShortId)" aria-expanded="false"
                                    aria-controls="collapse@(order.OrderShortId)">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <div>
                                            <strong class="me-2">Order #@order.OrderShortId</strong>
                                            @{
                                                var badgeClass = order.OrderStatus switch
                                                {
                                                    "Pending" => "bg-secondary",
                                                    "Preparing" => "bg-info",
                                                    "Out for Delivery" => "bg-warning",
                                                    "Delivered" => "bg-success",
                                                    "Cancelled" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                                
                                                var statusText = order.OrderStatus switch
                                                {
                                                    "Pending" => "Pending",
                                                    "Preparing" => "Preparing",
                                                    "Out for Delivery" => "Out for Delivery",
                                                    "Delivered" => "Delivered",
                                                    "Cancelled" => "Cancelled",
                                                    _ => order.OrderStatus
                                                };
                                            }
                                            <span class="badge @badgeClass">@statusText</span>
                                        </div>
                                        <div class="text-muted small">
                                            @order.FormattedOrderDate, @order.FormattedOrderTime
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="collapse@(order.OrderShortId)" class="accordion-collapse collapse"
                                aria-labelledby="heading@(order.OrderShortId)" data-bs-parent="#ordersAccordion">
                                <div class="accordion-body">
                                    <div class="mb-3">
                                        <h5>Restaurant Information</h5>
                                        <p class="mb-1">
                                            <a asp-controller="Menu" asp-action="Index" asp-route-restaurantId="@order.RestaurantId"
                                                class="text-decoration-none">
                                                <i class="fas fa-store me-2"></i>@order.RestaurantName
                                            </a>
                                        </p>
                                    </div>

                                    <div class="mb-3">
                                        <h5>Order Details</h5>
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Product</th>
                                                        <th class="text-end">Price</th>
                                                        <th class="text-center">Quantity</th>
                                                        <th class="text-end">Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in order.OrderItems)
                                                    {
                                                        <tr>
                                                            <td>@item.ProductName</td>
                                                            <td class="text-end">@item.Price.ToString("C")</td>
                                                            <td class="text-center">@item.Quantity</td>
                                                            <td class="text-end">@((item.Price * item.Quantity).ToString("C"))</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot class="table-light">
                                                    <tr>
                                                        <th colspan="3" class="text-end">Total:</th>
                                                        <th class="text-end">@order.TotalAmount.ToString("C")</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <h5>Payment Information</h5>
                                        <p class="mb-0">
                                            <strong>Payment Method:</strong>
                                            @if (order.PaymentMethod == "Cash")
                                            {
                                                <span>Cash on Delivery</span>
                                            }
                                            else if (order.PaymentMethod == "CreditCard")
                                            {
                                                <span>Credit Card</span>
                                            }
                                            else
                                            {
                                                <span>@order.PaymentMethod</span>
                                            }
                                        </p>
                                    </div>

                                    <div class="text-end mt-4">
                                        <a asp-controller="Menu" asp-action="Index" asp-route-restaurantId="@order.RestaurantId"
                                            class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-utensils me-1"></i>Order Again from this Restaurant
                                        </a>
                                        
                                        @if (order.OrderStatus == "Delivered" && !order.HasReview)
                                        {
                                            <a asp-controller="Orders" asp-action="WriteReview" asp-route-orderId="@order.OrderId"
                                                class="btn btn-warning btn-sm ms-2">
                                                <i class="fas fa-star me-1"></i>Write a Review
                                            </a>
                                        }
                                        else if (order.OrderStatus == "Delivered" && order.HasReview)
                                        {
                                            <span class="badge bg-success ms-2">
                                                <i class="fas fa-check me-1"></i>Review Submitted
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Accordion expanded state management
        document.addEventListener('DOMContentLoaded', function() {
            // Automatically open the first order (if any)
            var firstOrder = document.querySelector('.accordion-button');
            if (firstOrder) {
                firstOrder.click();
            }
        });
    </script>
} 