@model FoodOrderSite.Models.ViewModels.CreateReviewViewModel
@{
    ViewData["Title"] = "Write a Review";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <a asp-controller="Orders" asp-action="OrderHistory" asp-route-statusFilter="Delivered" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Orders
                </a>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">@Model.RestaurantName - Order Review</h5>
                    <small class="text-muted">Order Date: @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                </div>
                <div class="card-body">
                    <form asp-action="WriteReview" method="post">
                        <input type="hidden" asp-for="OrderId" />
                        <input type="hidden" asp-for="RestaurantId" />
                        <input type="hidden" asp-for="RestaurantName" />
                        <input type="hidden" asp-for="OrderDate" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Taste Rating -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Taste Rating</label>
                            <div class="rating-input mb-2">
                                <div class="d-flex">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="TasteRating" id="tasteRating@(i)" value="@i" />
                                            <label class="form-check-label" for="tasteRating@(i)">
                                                @i <i class="fas fa-star text-warning"></i>
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <span asp-validation-for="TasteRating" class="text-danger"></span>
                        </div>

                        <!-- Service Rating -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Service Rating</label>
                            <div class="rating-input mb-2">
                                <div class="d-flex">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="ServiceRating" id="serviceRating@(i)" value="@i" />
                                            <label class="form-check-label" for="serviceRating@(i)">
                                                @i <i class="fas fa-star text-warning"></i>
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <span asp-validation-for="ServiceRating" class="text-danger"></span>
                        </div>

                        <!-- Delivery Rating -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Delivery Rating</label>
                            <div class="rating-input mb-2">
                                <div class="d-flex">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="DeliveryRating" id="deliveryRating@(i)" value="@i" />
                                            <label class="form-check-label" for="deliveryRating@(i)">
                                                @i <i class="fas fa-star text-warning"></i>
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <span asp-validation-for="DeliveryRating" class="text-danger"></span>
                        </div>

                        <!-- Overall Rating -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Overall Rating</label>
                            <div class="rating-input mb-2">
                                <div class="d-flex">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="OverallRating" id="overallRating@(i)" value="@i" />
                                            <label class="form-check-label" for="overallRating@(i)">
                                                @i <i class="fas fa-star text-warning"></i>
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <span asp-validation-for="OverallRating" class="text-danger"></span>
                        </div>

                        <!-- Comment -->
                        <div class="mb-4">
                            <label asp-for="Comment" class="form-label fw-bold">Your Comment</label>
                            <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Share your experience..."></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary py-2">
                                <i class="fas fa-paper-plane me-2"></i>Submit Review
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 