@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Satıcı Kayıt - ForkBase</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-image: url('/images/bg-signin.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                z-index: 0;
            }

        .register-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 12px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            padding: 40px;
            width: 100%;
            max-width: 500px;
            position: relative;
            z-index: 1;
        }

        .logo {
            text-align: center;
            margin-bottom: 25px;
            font-size: 28px;
            font-weight: bold;
            color: #4a6bff;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 24px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #555;
            font-size: 14px;
        }

        input, select {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s;
            background-color: white;
        }

            input:focus, select:focus {
                border-color: #4a6bff;
                outline: none;
                box-shadow: 0 0 0 3px rgba(74, 107, 255, 0.1);
            }

        .password-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #888;
            font-size: 18px;
        }

        .register-button {
            width: 100%;
            padding: 14px;
            background-color: #4a6bff;
            color: white;
            border: none;
            border-radius: 30px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 10px;
        }

            .register-button:hover {
                background-color: #3a5bef;
                transform: translateY(-2px);
            }

        .login-link {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #666;
        }

            .login-link a {
                color: #4a6bff;
                text-decoration: none;
                font-weight: 600;
            }

        .form-row {
            display: flex;
            gap: 15px;
        }

            .form-row .form-group {
                flex: 1;
            }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="logo">ForkBase</div>
        <h1>Satıcı Hesabı Oluştur</h1>

        <form action="#" method="POST" id="registerForm">
            <div class="form-row">
                <div class="form-group">
                    <label for="name">Ad</label>
                    <input type="text" id="name" name="name" placeholder="Adınız" required>
                </div>
                <div class="form-group">
                    <label for="surname">Soyad</label>
                    <input type="text" id="surname" name="surname" placeholder="Soyadınız" required>
                </div>
            </div>

            <div class="form-group">
                <label for="email">E-posta Adresi</label>
                <input type="email" id="email" name="email" placeholder="ornek@email.com" required>
            </div>

            <div class="form-group">
                <label for="phone">Telefon Numarası</label>
                <input type="tel" id="phone" name="phone" placeholder="(5__) ___ __ __" required oninput="formatPhoneNumber(event)">
            </div>

            <div class="form-group">
                <label for="password">Şifre</label>
                <div class="password-wrapper">
                    <input type="password" id="password" name="password" placeholder="••••••••" required>
                    <span class="toggle-password" onclick="togglePassword()">
                        <i id="eyeIcon" class="fa-solid fa-eye"></i>
                    </span>
                </div>
            </div>

            <div class="form-group">
                <label for="shopname">Mağaza Adı</label>
                <input type="text" id="shopname" name="shopname" placeholder="Mağaza adınız" required>
            </div>

            <div class="form-group">
                <label for="shoptype">Mağaza Türü</label>
                <select id="shoptype" name="shoptype" required>
                    <option value="" disabled selected>Seçiniz</option>
                    <option value="restaurant">Restoran</option>
                    <option value="bakery">Fırın/Pastane</option>
                    <option value="grocery">Market/Bakkal</option>
                    <option value="butcher">Kasap</option>
                    <option value="other">Diğer</option>
                </select>
            </div>

            <div class="form-group">
                <label for="address">Adres</label>
                <input type="text" id="address" name="address" placeholder="Tam adres bilgisi" required>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="city">Şehir</label>
                    <input type="text" id="city" name="city" placeholder="Şehir" required>
                </div>
                <div class="form-group">
                    <label for="district">İlçe/Semt</label>
                    <input type="text" id="district" name="district" placeholder="İlçe/Semt" required>
                </div>
            </div>

            <button type="submit" class="register-button">Hesap Oluştur</button>
        </form>

        <div class="login-link">
            Zaten hesabınız var mı? <a href="#">Giriş Yap</a>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById("password");
            const eyeIcon = document.getElementById("eyeIcon");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                eyeIcon.classList.remove("fa-eye");
                eyeIcon.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                eyeIcon.classList.remove("fa-eye-slash");
                eyeIcon.classList.add("fa-eye");
            }
        }

        // Telefon numarasını formatlamak için fonksiyon
        function formatPhoneNumber(event) {
            let input = event.target;
            let value = input.value.replace(/\D/g, ""); // Sadece rakamları al
            if (value.length >= 4) {
                value = `(${value.substring(0, 3)}) ${value.substring(3, 6)} ${value.substring(6, 8)} ${value.substring(8, 10)}`;
            }
            input.value = value;
        }
    </script>
</body>
</html>
