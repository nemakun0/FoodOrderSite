@model FoodOrderSite.Models.ViewModels.RestaurantOrdersViewModel
@{
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
    ViewBag.Title = "Siparişler ve Müşteri Bilgileri";
}
<h2 class="text-center mb-4">@ViewBag.Title</h2>

<!-- Arama ve Tarih Seçimi -->
<div class="mb-4 d-flex justify-content-between">
    <!-- Tarih Seçici -->
    <div>
        <label for="orderDate" class="form-label">Sipariş Tarihi</label>
        <input type="date" id="orderDate" class="form-control" onchange="filterOrdersByDate()" />
    </div>
    <!-- Müşteri Adı veya Sipariş No Arama -->
    <div>
        <label for="orderSearch" class="form-label">Arama (Müşteri Adı / Sipariş No)</label>
        <input type="text" id="orderSearch" class="form-control" onkeyup="searchOrders()" placeholder="Müşteri Adı veya Sipariş No" />
    </div>
</div>

@if (!Model.Orders.Any())
{
    <div class="alert alert-info">
        <h5 class="alert-heading">Henüz sipariş bulunmuyor!</h5>
        <p>Restoranınıza henüz sipariş verilmemiş. Siparişler geldiğinde burada listelenecektir.</p>
    </div>
}
else
{
    <!-- Sipariş detaylarını göstermek için -->
    <div class="accordion" id="ordersAccordion">
        @foreach (var orderDetail in Model.Orders)
        {
            bool shouldExpand = !string.IsNullOrEmpty(Model.LastUpdatedOrderId) && 
                                 orderDetail.OrderId == Model.LastUpdatedOrderId;
            
            // If no specific order is set to expand, show the first one
            if (!shouldExpand && string.IsNullOrEmpty(Model.LastUpdatedOrderId) && orderDetail == Model.Orders.First())
            {
                shouldExpand = true;
            }
            
            <div class="accordion-item order-item" 
                 data-order-date="@orderDetail.FormattedOrderDate" 
                 data-customer-name="@orderDetail.CustomerName" 
                 data-order-id="@orderDetail.OrderShortId">
                <h2 class="accordion-header" id="heading@(orderDetail.OrderShortId)">
                    <button class="accordion-button @(shouldExpand ? "" : "collapsed")" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#collapse@(orderDetail.OrderShortId)" 
                            aria-expanded="@(shouldExpand ? "true" : "false")" 
                            aria-controls="collapse@(orderDetail.OrderShortId)">
                        Sipariş #@orderDetail.OrderShortId - @orderDetail.OrderDate.ToString("yyyy-MM-dd HH:mm") - @orderDetail.CustomerName
                    </button>
                </h2>
                <div id="collapse@(orderDetail.OrderShortId)" 
                     class="accordion-collapse collapse @(shouldExpand ? "show" : "")" 
                     aria-labelledby="heading@(orderDetail.OrderShortId)" 
                     data-bs-parent="#ordersAccordion">
                    <div class="accordion-body">
                        <h5>Ürünler</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Miktar</th>
                                    <th>Birim Fiyat</th>
                                    <th>Toplam</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in orderDetail.OrderItems)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@((item.Price * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Toplam:</th>
                                    <th>@orderDetail.TotalAmount.ToString("C")</th>
                                </tr>
                            </tfoot>
                        </table>

                        <h5>Müşteri Bilgileri</h5>
                        <p>
                            <strong>İsim:</strong> @orderDetail.CustomerName<br />
                            <strong>Telefon:</strong> @orderDetail.CustomerPhone<br />
                            <strong>Email:</strong> @orderDetail.CustomerEmail
                        </p>

                        @if (orderDetail.HasAddressInfo)
                        {
                            <h5>Teslimat Adresi</h5>
                            <p>
                                <strong>Adres Başlığı:</strong> @orderDetail.AddressTitle<br />
                                <strong>Adres:</strong> @orderDetail.DeliveryAddress<br />
                                <strong>İlçe/İl:</strong> @orderDetail.DeliveryDistrict / @orderDetail.DeliveryCity
                            </p>
                        }

                        <h5>Ödeme Bilgileri</h5>
                        <p>
                            <strong>Ödeme Yöntemi:</strong> 
                            @if (orderDetail.PaymentMethod == "Cash")
                            {
                                <span>Kapıda Ödeme</span>
                            }
                            else if (orderDetail.PaymentMethod == "CreditCard")
                            {
                                <span>Kredi Kartı</span>
                            }
                            else
                            {
                                <span>@orderDetail.PaymentMethod</span>
                            }
                        </p>

                        <h5>Sipariş Durumu</h5>
                        <form asp-action="UpdateOrderStatus" method="post">
                            <input type="hidden" name="orderId" value="@orderDetail.OrderId" />
                            <select class="form-select" name="status" onchange="this.form.submit()">
                                @if (orderDetail.OrderStatus == "Pending")
                                {
                                    <option value="Pending" selected>Beklemede</option>
                                }
                                else
                                {
                                    <option value="Pending">Beklemede</option>
                                }
                                
                                @if (orderDetail.OrderStatus == "Preparing")
                                {
                                    <option value="Preparing" selected>Hazırlanıyor</option>
                                }
                                else
                                {
                                    <option value="Preparing">Hazırlanıyor</option>
                                }
                                
                                @if (orderDetail.OrderStatus == "Out for Delivery")
                                {
                                    <option value="Out for Delivery" selected>Yolda</option>
                                }
                                else
                                {
                                    <option value="Out for Delivery">Yolda</option>
                                }
                                
                                @if (orderDetail.OrderStatus == "Delivered")
                                {
                                    <option value="Delivered" selected>Teslim Edildi</option>
                                }
                                else
                                {
                                    <option value="Delivered">Teslim Edildi</option>
                                }
                                
                                @if (orderDetail.OrderStatus == "Cancelled")
                                {
                                    <option value="Cancelled" selected>İptal</option>
                                }
                                else
                                {
                                    <option value="Cancelled">İptal</option>
                                }
                            </select>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

<script>
    // Tarihe göre filtreleme fonksiyonu
    function filterOrdersByDate() {
        var selectedDate = document.getElementById('orderDate').value;
        var orders = document.querySelectorAll('.order-item');

        orders.forEach(order => {
            var orderDate = order.getAttribute('data-order-date');
            if (selectedDate && orderDate !== selectedDate) {
                order.style.display = 'none';  // Bu siparişi gizle
            } else {
                order.style.display = '';  // Bu siparişi göster
            }
        });
    }

    // Sipariş adı veya numarasına göre arama fonksiyonu
    function searchOrders() {
        var searchText = document.getElementById('orderSearch').value.toLowerCase();
        var orders = document.querySelectorAll('.order-item');

        orders.forEach(order => {
            var customerName = order.getAttribute('data-customer-name').toLowerCase();
            var orderId = order.getAttribute('data-order-id').toString().toLowerCase();

            if (customerName.includes(searchText) || orderId.includes(searchText)) {
                order.style.display = '';  // Siparişi göster
            } else {
                order.style.display = 'none';  // Siparişi gizle
            }
        });
    }
</script>
