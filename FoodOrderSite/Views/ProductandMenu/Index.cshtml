@{
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}

@{
    ViewBag.Title = "Ürün ve Menü Yönetimi";
}
@model FoodOrderSite.Models.ViewModels.ProductAndMenuViewModel
<head>
    <!-- Diğer head elemanlarının yanına ekleyin -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>

<h2 class="text-center mb-4">@ViewBag.Title</h2>

<!-- Yeni ürün ekle linki -->
<div class="container mb-4 ">
    <a href="#" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#yeniUrunModal">Yeni Ürün Ekle</a>
</div>

<!-- Modal içeriği -->
<div class="modal fade" id="yeniUrunModal" tabindex="-1" aria-labelledby="yeniUrunModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius:15px;">
            <div class="modal-header">
                <h5 class="modal-title" id="yeniUrunModalLabel">Yeni Ürün Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <form asp-action ="Create" method="post" enctype="multipart/form-data">
                    <!-- Ürün Adı -->
                    <div class="mb-3">
                        <label asp-for="Name">Ürün Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="Ürün adı girin" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <!-- Kategori Seçimi -->
                    <div class="mb-3">
                        <label asp-for="SelectedCategoryId" class="form-label">Kategori</label>
                        <select asp-for="SelectedCategoryId" class="form-select"
                                asp-items="@(new SelectList(Model.AllCategories, "CategoryId", "Name"))">
                            <option selected disabled>Kategori seçin</option>
                        </select>
                        <span asp-validation-for="SelectedCategoryId" class="text-danger"></span>
                    </div>
                    <!-- Fiyat -->
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Fiyat</label>
                        <input asp-for="Price" class="form-control" placeholder="Fiyat" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <!-- Resim -->
                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label">Resim</label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ürün açıklaması"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <!-- Is Available (Radio Buttons) -->
                    <div class="mb-3">
                        <label>
                            Sunulacak mı?
                            <i class="bi bi-info-circle"
                               data-bs-toggle="tooltip"
                               data-bs-placement="right"
                               title="Evet demeniz halinde kaydettiğinizde ürün müşteriler tarafından sipariş edilebilir durumda olacaktır">
                            </i>
                        </label><br />
                        <div class="form-check form-check-inline">
                            <input asp-for="IsAvailable" class="form-check-input" type="radio" name="isAvailable" id="availableYes" value="true" />
                            <label class="form-check-label" for="availableYes">Evet</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="IsAvailable" class="form-check-input" type="radio" name="isAvailable" id="availableNo" value="false" />
                            <label class="form-check-label" for="availableNo">Hayır</label>
                        </div>
                        <span asp-validation-for="IsAvailable" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                        tooltipTriggerList.map(function (tooltipTriggerEl) {
                            return new bootstrap.Tooltip(tooltipTriggerEl);
                        });
                    });
                </script>
            </div>
        </div>
    </div>
</div>
<!-- Ürünleri listeleme bölümü -->
<div class="container mb-5">
    <h4 class="mb-3 text-primary">Mevcut Ürünler</h4>
    <div class="row g-3">
        <!-- Örnek ürün kartları -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100" style="border-radius:15px;">
                <img src="/images/yemek1.jpg" class="card-img-top" style="height:180px; object-fit:cover; border-top-left-radius:15px; border-top-right-radius:15px;">
                <div class="card-body">
                    <h5 class="card-title">Pizza Margherita</h5>
                    <p class="card-text">Fiyat: 75₺</p>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-sm btn-success">Düzenle</button>
                        <button class="btn btn-sm btn-danger">Sil</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Daha fazla ürün kartı ekleyebilirsiniz -->
    </div>
</div>