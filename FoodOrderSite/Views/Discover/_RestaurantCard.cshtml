@model FoodOrderSite.Models.Restaurant

<a asp-controller="Menu" asp-action="Index" asp-route-restaurantId="@Model.Id" class="text-decoration-none text-dark d-block h-100 restaurant-card-link">
    <div class="card h-100 restaurant-card">
        @if (Model.IsPromoted)
        {
            <span class="badge bg-danger position-absolute top-0 end-0 m-2" style="z-index: 1;">
                <i class="fas fa-crown me-1"></i>Promoted
            </span>
        }
        <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/default-restaurant.jpg" : Model.ImageUrl)"
             class="card-img-top restaurant-image"
             alt="@Model.Name"
             onerror="this.src='/images/default-restaurant.jpg'">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-1">@Model.Name</h5>
            <div class="mb-2">
                <span class="badge bg-secondary me-1">@Model.RestaurantType</span>
                <small class="text-muted">@Model.City, @Model.District</small>
            </div>
            
            <p class="card-text text-muted small flex-grow-1">@Model.ShortDescription</p>
            
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="text-warning">
                    @for (int j = 0; j < 5; j++)
                    {
                        if (j < Math.Floor(Model.Rating))
                        {
                            <i class="fas fa-star"></i>
                        }
                        else if (j < Model.Rating)
                        {
                            <i class="fas fa-star-half-alt"></i>
                        }
                        else
                        {
                            <i class="far fa-star"></i>
                        }
                    }
                    <span class="text-dark ms-1">(@Model.Rating.ToString("0.0"))</span>
                </span>
            </div>
        </div>
    </div>
</a>