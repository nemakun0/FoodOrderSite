@model FoodOrderSite.Models.DiscoverViewModel
@{
    ViewData["Title"] = "Discover Restaurants";
    var prevDisabled = Model.CurrentPage == 1 ? "disabled" : "";
    var nextDisabled = Model.CurrentPage == Model.TotalPages || Model.TotalPages == 0 ? "disabled" : "";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

