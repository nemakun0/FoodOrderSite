@model FoodOrderSite.Models.DiscoverViewModel
@{
    ViewData["Title"] = "Keşfet";
    var prevDisabled = Model.CurrentPage == 1 ? "disabled" : "";
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : "";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">Restoranları Keşfet</h1>
            <p class="lead">
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.SelectedCuisineType))
                {
                    <span class="text-muted">
                        <i class="fas fa-filter"></i> Filtrelenmiş:
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <span class="badge bg-info">"@Model.SearchTerm"</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.SelectedCuisineType))
                        {
                            <span class="badge bg-info">@Model.SelectedCuisineType</span>
                        }
                        (@Model.FilteredCount sonuç)
                    </span>
                }
                else
                {
                    <span class="text-muted">@Model.TotalRestaurants restoran listeleniyor</span>
                }
            </p>
        </div>
    </div>

    <div class="row">
        <!-- Filtreleme Paneli (Sol Taraf) -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filtrele</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index" asp-controller="Discover">
                        <input type="hidden" name="page" value="1" />

                        <div class="mb-3">
                            <label class="form-label">Arama</label>
                            <input type="text" name="searchTerm" class="form-control"
                                   placeholder="Restoran ara..." value="@Model.SearchTerm">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mutfak Türü</label>
                            <select name="cuisineType" class="form-select">
                                <option value="">Tüm Mutfaklar</option>
                                @foreach (var type in Model.CuisineTypes)
                                {
                                    <option value="@type" selected="@(type == Model.SelectedCuisineType)">@type</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Sırala</label>
                            <select name="sortBy" class="form-select">
                                <option value="">Önerilen Sıralama</option>
                                <option value="rating" selected="@("rating" == Model.SortBy)">En Yüksek Puan</option>
                                <option value="deliveryTime" selected="@("deliveryTime" == Model.SortBy)">En Hızlı Teslimat</option>
                                <option value="deliveryFee" selected="@("deliveryFee" == Model.SortBy)">En Düşük Teslimat Ücreti</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Filtrele
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Sıfırla
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Restoran Listesi (Sağ Taraf) -->
        <div class="col-md-9">
            @if (!Model.Restaurants.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>Seçtiğiniz kriterlere uygun restoran bulunamadı.
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var restaurant in Model.Restaurants)
                    {
                        <div class="col-lg-3 col-md-6 mb-4">
                            @await Html.PartialAsync("_RestaurantCard", restaurant)
                        </div>
                    }
                </div>

                <!-- Sayfalama -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Restoran sayfalama">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @prevDisabled">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-cuisineType="@Model.SelectedCuisineType"
                                   asp-route-sortBy="@Model.SortBy"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-cuisineType="@Model.SelectedCuisineType"
                                       asp-route-sortBy="@Model.SortBy"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-page="@i">@i</a>
                                </li>
                            }

                            <li class="page-item @nextDisabled">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-cuisineType="@Model.SelectedCuisineType"
                                   asp-route-sortBy="@Model.SortBy"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-page="@(Model.CurrentPage + 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .sticky-top {
            z-index: 1019;
        }

        .restaurant-card {
            transition: transform 0.3s, box-shadow 0.3s;
            border-radius: 10px;
            overflow: hidden;
        }

            .restaurant-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
    </style>
}