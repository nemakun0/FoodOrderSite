<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
            <p class="lead text-muted">
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.SelectedDistrict) || 
                     !string.IsNullOrEmpty(Model.SelectedRestaurantType) || !string.IsNullOrEmpty(Model.SelectedCategory))
                {
                    <span>
                        <i class="fas fa-filter me-2"></i>Filtered by:
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <span class="badge bg-primary me-1">Term: "@Model.SearchTerm"</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.SelectedDistrict))
                        {
                            <span class="badge bg-info me-1">District: @Model.SelectedDistrict</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.SelectedRestaurantType))
                        {
                            <span class="badge bg-success me-1">Type: @Model.SelectedRestaurantType</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.SelectedCategory))
                        {
                            <span class="badge bg-warning text-dark me-1">Category: @Model.SelectedCategory</span>
                        }
                        <span class="ms-2">(@Model.FilteredCount results)</span>
                    </span>
                }
                else
                {
                    <span>@Model.TotalRestaurants restaurants listed</span>
                }
            </p>
        </div>
    </div>

    <div class="row">
        <!-- Filters Column -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-sliders-h me-2"></i>Filters</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index" asp-controller="Discover">
                        <input type="hidden" name="page" value="1" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Search</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" name="searchTerm" class="form-control"
                                       placeholder="Search for restaurant, food, or type..." value="@Model.SearchTerm">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">District</label>
                            <select name="district" class="form-select" onchange="this.form.submit()">
                                <option value="">All Districts</option>
                                @if (Model.AllDistricts != null)
                                {
                                    @foreach (var districtName in Model.AllDistricts)
                                    {
                                        <option value="@districtName" selected="@(districtName == Model.SelectedDistrict)">@districtName</option>
                                    }
                                }
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Restaurant Type</label>
                            <select name="restaurantType" class="form-select" onchange="this.form.submit()">
                                <option value="">All Types</option>
                                @if (Model.AllRestaurantTypes != null)
                                {
                                    @foreach (var typeName in Model.AllRestaurantTypes)
                                    {
                                        <option value="@typeName" selected="@(typeName == Model.SelectedRestaurantType)">@typeName</option>
                                    }
                                }
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Food Category</label>
                            <select name="category" class="form-select" onchange="this.form.submit()">
                                <option value="">All Categories</option>
                                @if (Model.AllCategories != null)
                                {
                                    @foreach (var category in Model.AllCategories)
                                    {
                                        <option value="@category.Name" selected="@(category.Name == Model.SelectedCategory)">@category.Name</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter me-2"></i>Apply Filters
                            </button> 
                            <a asp-action="Index" asp-controller="Discover" class="btn btn-outline-secondary">
                                <i class="fas fa-undo me-2"></i>Reset Filters
                            </a> 
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Restaurants Column -->
        <div class="col-lg-9">
            @if (!Model.Restaurants.Any())
            {
                <div class="alert alert-warning py-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="mb-1">No Results Found</h5>
                            @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.SelectedDistrict) || 
                                !string.IsNullOrEmpty(Model.SelectedRestaurantType) || !string.IsNullOrEmpty(Model.SelectedCategory))
                            {
                                <p class="mb-0">No restaurants found matching your current criteria. Try different keywords or broaden your filters.</p>
                            }
                            else
                            {
                                <p class="mb-0">There are currently no active restaurants listed. Please check back later!</p>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var restaurant in Model.Restaurants)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            @await Html.PartialAsync("_RestaurantCard", restaurant)
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-5">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @prevDisabled">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-district="@Model.SelectedDistrict"
                                   asp-route-restaurantType="@Model.SelectedRestaurantType" 
                                   asp-route-sortBy="@Model.SortBy"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-category="@Model.SelectedCategory"
                                   asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-district="@Model.SelectedDistrict"
                                       asp-route-restaurantType="@Model.SelectedRestaurantType" 
                                       asp-route-sortBy="@Model.SortBy"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-category="@Model.SelectedCategory"
                                       asp-route-page="@i">@i</a>
                                </li>
                            }

                            <li class="page-item @nextDisabled">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-district="@Model.SelectedDistrict"
                                   asp-route-restaurantType="@Model.SelectedRestaurantType" 
                                   asp-route-sortBy="@Model.SortBy"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-category="@Model.SelectedCategory"
                                   asp-route-page="@(Model.CurrentPage + 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .sticky-top {
            z-index: 1020;
        }

        .restaurant-card {
            transition: all 0.3s ease;
            border: 1px solid rgba(0,0,0,0.1);
            height: 100%;
        }

            .restaurant-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
                border-color: rgba(0,0,0,0.2);
            }

        .restaurant-image {
            height: 180px;
            object-fit: cover;
            width: 100%;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .badge.bg-secondary {
            background-color: #6c757d !important;
        }
        .badge.bg-info {
            background-color: #0dcaf0 !important;
            color: #000;
        }
        .badge.bg-success {
            background-color: #198754 !important;
            color: #fff;
        }
        .badge.bg-warning {
            background-color: #ffc107 !important;
            color: #212529;
        }
    </style>
}