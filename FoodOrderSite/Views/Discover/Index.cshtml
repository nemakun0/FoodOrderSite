@model FoodOrderSite.Models.DiscoverViewModel
@{
    ViewData["Title"] = "Restoranları Keşfet";
    var prevDisabled = Model.CurrentPage == 1 ? "disabled" : "";
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : "";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">Restoranları Keşfet</h1>
            <p class="lead text-muted">
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.SelectedCuisineType))
                {
                    <span>
                        <i class="fas fa-filter me-2"></i>Filtrelenmiş:
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <span class="badge bg-primary">"@Model.SearchTerm"</span>
                        }
                        @if (!string.IsNullOrEmpty(Model.SelectedCuisineType))
                        {
                            <span class="badge bg-primary">@Model.SelectedCuisineType</span>
                        }
                        <span class="ms-2">(@Model.FilteredCount sonuç)</span>
                    </span>
                }
                else
                {
                    <span>@Model.TotalRestaurants restoran listeleniyor</span>
                }
            </p>
        </div>
    </div>

    <div class="row">
        <!-- Filters Column -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-sliders-h me-2"></i>Filtreler</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index" asp-controller="Discover">
                        <input type="hidden" name="page" value="1" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Arama</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" name="searchTerm" class="form-control"
                                       placeholder="Restoran veya mutfak ara..." value="@Model.SearchTerm">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mutfak Türü</label>
                            <select name="cuisineType" class="form-select">
                                <option value="">Tüm Mutfaklar</option>
                                @foreach (var type in Model.CuisineTypes)
                                {
                                    <option value="@type" selected="@(type == Model.SelectedCuisineType)">@type</option>
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Sırala</label>
                            <select name="sortBy" class="form-select">
                                <option value="">Önerilen</option>
                                <option value="rating" selected="@("rating" == Model.SortBy)">En Yüksek Puan</option>
                                <option value="deliveryTime" selected="@("deliveryTime" == Model.SortBy)">En Hızlı Teslimat</option>
                                <option value="deliveryFee" selected="@("deliveryFee" == Model.SortBy)">En Düşük Ücret</option>
                                <option value="minOrder" selected="@("minOrder" == Model.SortBy)">En Düşük Min. Sipariş</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-filter me-2"></i>Uygula
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-undo me-2"></i>Sıfırla
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Restaurants Column -->
        <div class="col-lg-9">
            @if (!Model.Restaurants.Any())
            {
                <div class="alert alert-warning py-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                        <div>
                            <h5 class="mb-1">Sonuç bulunamadı</h5>
                            <p class="mb-0">Filtrelerinizi değiştirip tekrar deneyebilirsiniz.</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var restaurant in Model.Restaurants)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            @await Html.PartialAsync("_RestaurantCard", restaurant)
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-5">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @prevDisabled">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-cuisineType="@Model.SelectedCuisineType"
                                   asp-route-sortBy="@Model.SortBy"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-cuisineType="@Model.SelectedCuisineType"
                                       asp-route-sortBy="@Model.SortBy"
                                       asp-route-searchTerm="@Model.SearchTerm"
                                       asp-route-page="@i">@i</a>
                                </li>
                            }

                            <li class="page-item @nextDisabled">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-cuisineType="@Model.SelectedCuisineType"
                                   asp-route-sortBy="@Model.SortBy"
                                   asp-route-searchTerm="@Model.SearchTerm"
                                   asp-route-page="@(Model.CurrentPage + 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .sticky-top {
            z-index: 1020;
        }

        .restaurant-card {
            transition: all 0.3s ease;
            border: 1px solid rgba(0,0,0,0.1);
            height: 100%;
        }

            .restaurant-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
                border-color: rgba(0,0,0,0.2);
            }

        .restaurant-image {
            height: 180px;
            object-fit: cover;
            width: 100%;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .badge.bg-secondary {
            background-color: #6c757d !important;
        }
    </style>
}