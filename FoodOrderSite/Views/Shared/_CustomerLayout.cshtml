@using FoodOrderSite.Models.ViewModels


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodOrderSite</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <!-- Özel stil dosyaları -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodOrderSite.styles.css" asp-append-version="true" />
    <style>
        .dropdown-menu .dropdown-item:hover {
            background-color: #f0f0f0;
            color: #000;
            transition: all 0.2s ease;
        }

        .dropdown-menu .dropdown-item i {
            width: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    @{
        var session = HttpContextAccessor.HttpContext?.Session;
        // Ensure "Cart" matches CartSessionKey in CartController
        var cartData = session?.GetString("Cart");
        var count = 0;
        if (!string.IsNullOrEmpty(cartData))
        {
            try
            {
                var items = Newtonsoft.Json.JsonConvert.DeserializeObject<List<FoodOrderSite.Models.ViewModels.CartItemViewModel>>(cartData);
                count = items?.Sum(i => i.Quantity) ?? 0;
            }
            catch
            {
                // Handle potential deserialization error, maybe clear cart or log
                session.Remove("Cart"); // Clear corrupted cart data
                count = 0;
            }
        }
        // Kullanıcı bilgisi
        var username = session?.GetString("UserName");
        var isAuthenticated = !string.IsNullOrEmpty(username);
    }

    <!-- ✅ HEADER BURADA BAŞLIYOR -->
    <header class="bg-white shadow-sm">
        <div class="container-fluid d-flex justify-content-between align-items-center p-3">
            <!-- Logo -->
            <div class="d-flex align-items-center gap-3">
                <a href="/" class="text-decoration-none fs-4 fw-bold text-dark">
                    <i class="fas fa-utensils me-2 text-primary"></i>ForkBase
                </a>
            </div>

            <!-- Sağ Taraf: Sepet ve Profil -->
            <div class="d-flex align-items-center gap-3">

                <!-- 👤 Kullanıcı Profili -->
                <div class="dropdown">
                    <button class="btn border-0 bg-transparent p-0" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle fa-2x text-dark"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow rounded-3 p-2 border-0" aria-labelledby="userDropdown">
                        @if (isAuthenticated)
                        {
                            <li class="dropdown-header fw-bold text-dark">Merhaba, @username!</li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2 py-2" href="@Url.Action("SavedAddresses", "Account")">
                                    <i class="fas fa-map-marker-alt text-primary"></i>
                                    <span>Kayıtlı Adresler</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2 py-2" href="@Url.Action("OrderHistory", "Orders")">
                                    <i class="fas fa-history text-primary"></i>
                                    <span>Geçmiş Siparişler</span>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider my-2" /></li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2 py-2 text-danger" href="@Url.Action("Logout", "SignIn")">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Çıkış Yap</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2 py-2" href="@Url.Action("Index", "SignIn")">
                                    <i class="fas fa-sign-in-alt text-primary"></i>
                                    <span>Giriş Yap</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2 py-2" href="@Url.Action("Index", "SignUp")">
                                    <i class="fas fa-user-plus text-primary"></i>
                                    <span>Kayıt Ol</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- 🍎 Sepet Butonu -->
                <a asp-controller="Cart" asp-action="Index" class="btn position-relative">
                    <i class="fas fa-shopping-cart fa-lg text-dark"></i>
                    @if (count > 0)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            @count
                        </span>
                    }
                </a>
            </div>
        </div>
    </header>


    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <footer class="footer-section mt-auto">
        <div class="container-fluid px-5">
            <div class="row g-4">
                <!-- About Column -->
                <div class="col-lg-4 col-md-6">
                    <div class="footer-brand mb-3">
                        <i class="fas fa-utensils me-2"></i>ForkBase
                    </div>
                    <p class="footer-about-text">
                        Delivering happiness through delicious food. Order from your favorite restaurants with lightning-fast delivery.
                    </p>
                    <div class="social-links mt-4">
                        <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <!-- Quick Links Column -->
                <div class="col-lg-2 col-md-6">
                    <h5 class="footer-heading">Quick Links</h5>
                    <ul class="footer-menu">
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Home</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>About Us</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Restaurants</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>How It Works</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Testimonials</a></li>
                    </ul>
                </div>

                <!-- Help Column -->
                <div class="col-lg-2 col-md-6">
                    <h5 class="footer-heading">Help & Info</h5>
                    <ul class="footer-menu">
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>My Account</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Track Order</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>FAQs</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Contact Us</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right me-2"></i>Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- Newsletter Column -->
                <div class="col-lg-4 col-md-6">
                    <h5 class="footer-heading">Newsletter</h5>
                    <p class="footer-newsletter-text">
                        Subscribe to get 10% discount and be the first to know about new restaurants and special offers!
                    </p>
                    <form class="newsletter-form mt-3">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your email address" required>
                            <button class="btn btn-subscribe" type="submit">
                                <i class="fas fa-paper-plane"></i>
                            </button>
                        </div>
                    </form>
                    <div class="payment-methods mt-4">
                        <p class="mb-2">We Accept:</p>
                        <div class="payment-icons">
                            <i class="fab fa-cc-visa"></i>
                            <i class="fab fa-cc-mastercard"></i>
                            <i class="fab fa-cc-paypal"></i>
                            <i class="fab fa-cc-apple-pay"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom mt-5 pt-4 border-top">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="mb-0">&copy; 2025 ForkBase. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <div class="footer-app-links">
                            <a href="#" class="app-link me-2">
                                <i class="fab fa-apple me-1"></i> App Store
                            </a>
                            <a href="#" class="app-link">
                                <i class="fab fa-google-play me-1"></i> Google Play
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS Script Dosyaları -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
    <!-- Ensure Styles section is rendered after main styles to allow override/additions -->
</body>
</html>
