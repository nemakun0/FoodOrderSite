@{
    var restaurantName = ViewBag.RestaurantName ?? "ForkBase";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodOrderSite</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodOrderSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm rounded-pill mx-5 my-4 px-5 py-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="ManageRestaurant" asp-action="Index">
                    <i class="fas fa-utensils me-2"></i>@restaurantName
                </a>

                <button class="custom-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu" aria-controls="mobileMenu">
                    <i class="fas fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse d-none d-lg-flex justify-content-end">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="RestaurantSettings" asp-action="Index">Restaurant Settings</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="OrdersandCustomer" asp-action="Index">Orders and Customers</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="ProductandMenu" asp-action="Index">Products and Menu</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="ReportsandAnalysis" asp-action="Index">Reports and Analysis</a></li>
                    </ul>
                    <div>
                        <a class="btn btn-warning ms-3" asp-controller="SignIn" asp-action="Logout">Log Out</a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Mobil Menü -->
        <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="mobileMenuLabel">Menu</h5>
                <button type="button" class="btn-close text-reset bg-light" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="RestaurantSettings" asp-action="Index">Restaurant Settings</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="OrdersandCustomer" asp-action="Index">Orders and Customers</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="ProductandMenu" asp-action="Index">Products and Menu</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-controller="ReportsandAnalysis" asp-action="Index">Reports and Analysis</a></li>
                    <li class="nav-item d-lg-none mt-3"><a class="btn btn-warning" asp-controller="SignIn" asp-action="Logout">Log Out</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>
