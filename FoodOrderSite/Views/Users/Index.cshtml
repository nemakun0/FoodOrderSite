@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid" style="margin-top: 4rem;">
    <!-- Customers Section -->
    <div class="custom-card mb-4">
        <div class="custom-card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Müşteriler</h5>
            <span class="badge bg-primary">@ViewBag.CustomerCount Müşteri</span>
        </div>
        <div class="custom-card-body">
            <div class="table-responsive">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Doğum Tarihi</th>
                            <th>Kayıt Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            <tr>
                                <td>@customer.Name @customer.Surname</td>
                                <td>@customer.Email</td>
                                <td>@customer.BirthDate.ToString("dd.MM.yyyy")</td>
                                <td>@customer.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input status-toggle" 
                                               type="checkbox" 
                                               id="status-@customer.UserId" 
                                               @(customer.Status ? "checked" : "")
                                               data-user-id="@customer.UserId"
                                               data-user-type="customer">
                                        <label class="form-check-label" for="status-@customer.UserId">
                                            @(customer.Status ? "Aktif" : "Pasif")
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-info me-2" title="Detaylar">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Sellers Section -->
    <div class="custom-card">
        <div class="custom-card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Satıcılar</h5>
            <span class="badge bg-primary">@ViewBag.SellerCount Satıcı</span>
        </div>
        <div class="custom-card-body">
            <div class="table-responsive">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Doğum Tarihi</th>
                            <th>Kayıt Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var seller in Model.Sellers)
                        {
                            <tr>
                                <td>@seller.Name @seller.Surname</td>
                                <td>@seller.Email</td>
                                <td>@seller.BirthDate.ToString("dd.MM.yyyy")</td>
                                <td>@seller.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input status-toggle" 
                                               type="checkbox" 
                                               id="status-@seller.UserId" 
                                               @(seller.Status ? "checked" : "")
                                               data-user-id="@seller.UserId"
                                               data-user-type="seller">
                                        <label class="form-check-label" for="status-@seller.UserId">
                                            @(seller.Status ? "Aktif" : "Pasif")
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-info me-2" title="Detaylar">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.status-toggle').change(function() {
                const userId = $(this).data('user-id');
                const userType = $(this).data('user-type');
                const isActive = $(this).prop('checked');
                const label = $(this).next('label');

                $.ajax({
                    url: '/Users/ToggleStatus',
                    type: 'POST',
                    data: {
                        userId: userId,
                        userType: userType,
                        status: isActive
                    },
                    success: function(response) {
                        if (response.success) {
                            label.text(isActive ? 'Aktif' : 'Pasif');
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                            $(this).prop('checked', !isActive);
                        }
                    },
                    error: function(xhr) {
                        toastr.error('Bir hata oluştu: ' + xhr.responseText);
                        $(this).prop('checked', !isActive);
                    }
                });
            });
        });
    </script>
}