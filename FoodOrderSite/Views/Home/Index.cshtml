@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">The Freshest Flavors Delivered to Your Door!</h1>
                <p class="hero-subtitle">Discover thousands of food varieties from hundreds of restaurants with fast delivery tailored to your taste.</p>
                <button class="btn btn-primary btn-lg hero-button">Explore Now</button>
            </div>
            <div class="col-lg-6">
                <img src="/images/hero-food.jpg" alt="Various delicious foods" class="img-fluid hero-image">
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section">
    <div class="container">
        <h2 class="section-title">Food Categories</h2>
        <p class="section-subtitle">Discover your favorite flavors</p>

        <div class="row">
            <!-- Category Cards -->
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="category-card">
                    <img src="/images/category-burger.jpg" alt="Hamburger" class="category-image">
                    <div class="category-overlay">
                        <h3>Fast Food</h3>
                        <a href="#" class="btn btn-outline-light">Browse</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <div class="category-card">
                    <img src="/images/category-pizza.jpg" alt="Pizza" class="category-image">
                    <div class="category-overlay">
                        <h3>Pizza</h3>
                        <a href="#" class="btn btn-outline-light">Browse</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <div class="category-card">
                    <img src="/images/category-salad.jpg" alt="Salad" class="category-image">
                    <div class="category-overlay">
                        <h3>Healthy</h3>
                        <a href="#" class="btn btn-outline-light">Browse</a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <div class="category-card">
                    <img src="/images/category-dessert.jpg" alt="Dessert" class="category-image">
                    <div class="category-overlay">
                        <h3>Desserts</h3>
                        <a href="#" class="btn btn-outline-light">Browse</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Popular Products Section -->
<section class="popular-products-section">
    <div class="container">
        <h2 class="section-title">Popular Products</h2>
        <p class="section-subtitle">Most preferred flavors</p>

        <div class="row">
            <!-- Product Cards -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="product-card">
                    <div class="product-badge">Best Seller</div>
                    <img src="/images/product-burger.jpg" alt="Double Cheeseburger" class="product-image">
                    <div class="product-body">
                        <h3>Double Cheeseburger</h3>
                        <p class="product-description">Double patty, cheddar cheese and special sauce</p>
                        <div class="product-price">$5.99</div>
                        <button class="btn btn-primary btn-block">Add to Cart</button>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="product-card">
                    <img src="/images/product-pizza.jpg" alt="Pepperoni Pizza" class="product-image">
                    <div class="product-body">
                        <h3>Pepperoni Pizza</h3>
                        <p class="product-description">Lots of pepperoni and mozzarella cheese</p>
                        <div class="product-price">$8.99</div>
                        <button class="btn btn-primary btn-block">Add to Cart</button>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="product-card">
                    <div class="product-badge">New</div>
                    <img src="/images/product-sushi.jpg" alt="Sushi Plate" class="product-image">
                    <div class="product-body">
                        <h3>Sushi Plate</h3>
                        <p class="product-description">12 pieces of assorted sushi</p>
                        <div class="product-price">$12.99</div>
                        <button class="btn btn-primary btn-block">Add to Cart</button>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="product-card">
                    <img src="/images/product-pasta.jpg" alt="Carbonara" class="product-image">
                    <div class="product-body">
                        <h3>Carbonara</h3>
                        <p class="product-description">Classic Italian style carbonara</p>
                        <div class="product-price">$7.99</div>
                        <button class="btn btn-primary btn-block">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        /* Hero Section Styles */
        .hero-section {
            background: linear-gradient(135deg, #f5f7fa 0%, #ffe8e8 100%);
            padding: 80px 0;
            margin-bottom: 40px;
        }

        .hero-title {
            font-size: 2.8rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #333;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 30px;
            color: #666;
        }

        .hero-button {
            padding: 12px 30px;
            border-radius: 30px;
            font-weight: 600;
            background: linear-gradient(to right, #ff6b6b, #ff8e53);
            border: none;
        }

        .hero-image {
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        /* Categories Section Styles */
        .categories-section {
            padding: 60px 0;
            background-color: #fff;
        }

        .section-title {
            font-size: 2.2rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 15px;
            color: #333;
        }

        .section-subtitle {
            font-size: 1.1rem;
            text-align: center;
            margin-bottom: 40px;
            color: #666;
        }

        .category-card {
            position: relative;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        }

            .category-card:hover {
                transform: translateY(-10px);
            }

        .category-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .category-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 20px;
            text-align: center;
        }

            .category-overlay h3 {
                font-size: 1.3rem;
                margin-bottom: 10px;
            }

        /* Popular Products Section Styles */
        .popular-products-section {
            padding: 60px 0;
            background-color: #f9f9f9;
        }

        .product-card {
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            position: relative;
        }

            .product-card:hover {
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
                transform: translateY(-5px);
            }

        .product-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: linear-gradient(to right, #ff4757, #ff6b81);
            color: white;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            z-index: 1;
        }

        .product-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .product-body {
            padding: 20px;
        }

            .product-body h3 {
                font-size: 1.2rem;
                margin-bottom: 10px;
                color: #333;
            }

        .product-description {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 15px;
            min-height: 40px;
        }

        .product-price {
            font-size: 1.3rem;
            font-weight: 700;
            color: #ff6b81;
            margin-bottom: 15px;
        }

        /* Responsive Settings */
        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2rem;
            }

            .hero-subtitle {
                font-size: 1rem;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .category-card, .product-card {
                margin-bottom: 20px;
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Hero button click action
        document.querySelector('.hero-button').addEventListener('click', function () {
            document.querySelector('.categories-section').scrollIntoView({
                behavior: 'smooth'
            });
        });

        // Product card hover effects (disabled for mobile)
        if (window.innerWidth > 768) {
            const productCards = document.querySelectorAll('.product-card');

            productCards.forEach(card => {
                card.addEventListener('mouseenter', function () {
                    this.style.boxShadow = '0 15px 30px rgba(0, 0, 0, 0.15)';
                });

                card.addEventListener('mouseleave', function () {
                    this.style.boxShadow = '0 5px 15px rgba(0, 0, 0, 0.05)';
                });
            });
        }
    </script>
}