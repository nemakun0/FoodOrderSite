@model IEnumerable<FoodOrderSite.Models.Product>
@{
    ViewData["Title"] = "Lezzetli Yemekler Dünyası";
}

<!-- Hero Bölümü -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">Lezzetin En Taze Hali Kapınızda!</h1>
                <p class="hero-subtitle">Binlerce çeşit yemek, yüzlerce restoran ve hızlı teslimat ile damak tadınıza uygun lezzetleri keşfedin.</p>
                <button class="btn btn-primary btn-lg hero-button">Hemen Keşfet</button>
            </div>
            <div class="col-lg-6">
                <img src="~/images/hero-food.jpg" alt="Çeşitli lezzetli yemekler" class="img-fluid hero-image">
            </div>
        </div>
    </div>
</section>

<!-- Kategoriler Bölümü -->
<section class="categories-section">
    <div class="container">
        <h2 class="section-title">Yemek Kategorileri</h2>
        <p class="section-subtitle">Favori lezzetlerinizi keşfedin</p>
        <div class="row">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="category-card">
                    <img src="~/images/category-burger.jpg" alt="Hamburger" class="category-image">
                    <div class="category-overlay">
                        <h3>Fast Food</h3>
                        <a href="#" class="btn btn-outline-light">Gözat</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="category-card">
                    <img src="~/images/category-pizza.jpg" alt="Pizza" class="category-image">
                    <div class="category-overlay">
                        <h3>Pizza</h3>
                        <a href="#" class="btn btn-outline-light">Gözat</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="category-card">
                    <img src="~/images/category-salad.jpg" alt="Salata" class="category-image">
                    <div class="category-overlay">
                        <h3>Sağlıklı</h3>
                        <a href="#" class="btn btn-outline-light">Gözat</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="category-card">
                    <img src="~/images/category-dessert.jpg" alt="Tatlı" class="category-image">
                    <div class="category-overlay">
                        <h3>Tatlılar</h3>
                        <a href="#" class="btn btn-outline-light">Gözat</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Popüler Ürünler Bölümü -->
<section class="popular-products-section">
    <div class="container">
        <h2 class="section-title">Popüler Ürünler</h2>
        <p class="section-subtitle">En çok tercih edilen lezzetler</p>
        <div class="row">
            @foreach (var p in Model)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="product-card">
                        @if (p.IsBestSeller)
                        {
                            <div class="product-badge">Çok Satan</div>
                        }
                        @if (p.IsNew)
                        {
                            <div class="product-badge bg-success">Yeni</div>
                        }
                        <img src="~/images/product-placeholder.jpg" alt="@p.Name" class="product-image">
                        <div class="product-body">
                            <h3>@p.Name</h3>
                            <p class="product-description">@p.Description</p>
                            <div class="product-price">@p.Price.ToString("C2")</div>
                            <form asp-controller="Cart" asp-action="Add" method="post">
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn btn-primary btn-block">Sepete Ekle</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>