@{
    Layout = null;
}
@model FoodOrderSite.Models.ViewModels.CustomerRegisterViewModel.RegisterViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Müşteri Kayıt - ForkBase</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-image: url('/images/bg-signup.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                z-index: 0;
            }

        .register-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 12px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
            padding: 40px;
            width: 100%;
            max-width: 500px;
            position: relative;
            z-index: 1;
        }

        .logo {
            text-align: center;
            margin-bottom: 25px;
            font-size: 28px;
            font-weight: bold;
            color: #4a6bff;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 24px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #555;
            font-size: 14px;
        }

        input, select {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s;
            background-color: white;
        }

            input:focus, select:focus {
                border-color: #4a6bff;
                outline: none;
                box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
            }

        .password-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #888;
            font-size: 18px;
        }

        .register-button {
            width: 100%;
            padding: 14px;
            background-color: #4a6bff;
            color: white;
            border: none;
            border-radius: 30px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 10px;
        }

            .register-button:hover {
                background-color: #3a5bef;
                transform: translateY(-2px);
            }

        .login-link {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #666;
        }

            .login-link a {
                color: #4a6bff;
                text-decoration: none;
                font-weight: 600;
            }

        .form-row {
            display: flex;
            gap: 15px;
        }

            .form-row .form-group {
                flex: 1;
            }

        .date-input {
            position: relative;
        }

        .text-danger {
            color: red; /* Kırmızı renk */
            border-color: #f5c6cb; /* Hafif kırmızımsı border */
        }

    </style>
</head>
<body>
    <div class="register-container">
        <div class="logo">ForkBase</div>
        <h1>Müşteri Hesabı Oluştur</h1>

        <form asp-action="Index" method="post" id="registerForm">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Adınız" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" placeholder="Soyadınız" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="BirthDate"></label>
                <input asp-for="BirthDate" type="date" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" placeholder="(5__) ___ __ __" oninput="formatPhoneNumber(event)" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="password-wrapper">
                    <input asp-for="Password" id="password" type="password" class="form-control" placeholder="••••••••" />
                    <span class="toggle-password" onclick="togglePassword()">
                        <i id="eyeIcon" class="fa-solid fa-eye"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AddressTitle"></label>
                <input asp-for="AddressTitle" class="form-control" placeholder="Örn: Ev, İş, Yazlık" />
                <span asp-validation-for="AddressTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AddressLine"></label>
                <input asp-for="AddressLine" class="form-control" placeholder="Tam adres bilgisi" />
                <span asp-validation-for="AddressLine" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" placeholder="Şehir" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="District"></label>
                    <input asp-for="District" class="form-control" placeholder="İlçe/Semt" />
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="register-button">Hesap Oluştur</button>
        </form>

        <div class="login-link">
            <div class="login-link">
                Zaten hesabınız var mı? <a asp-controller="SignIn" asp-action="Index">Giriş Yap</a>
            </div>

        </div>
    </div>
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById("password");
            const eyeIcon = document.getElementById("eyeIcon");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                eyeIcon.classList.remove("fa-eye");
                eyeIcon.classList.add("fa-eye-slash");
            } else {
                passwordInput.type = "password";
                eyeIcon.classList.remove("fa-eye-slash");
                eyeIcon.classList.add("fa-eye");
            }
        }

        // Telefon numarasını formatlamak için fonksiyon
        function formatPhoneNumber(event) {
            let input = event.target;
            let value = input.value.replace(/\D/g, ""); // Sadece rakamları al
            if (value.length >= 4) {
                value = `(${value.substring(0, 3)}) ${value.substring(3, 6)} ${value.substring(6, 8)} ${value.substring(8, 10)}`;
            }
            input.value = value;
        }

    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>