@* @model IEnumerable<FoodOrder.Models.User> *@

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="page-title mb-0">Kullanıcı Yönetimi</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin/Dashboard">Anasayfa</a></li>
        <li class="breadcrumb-item active" aria-current="page">Kullanıcılar</li>
    </ol>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Kullanıcı Listesi</h5>
                <a href="/Admin/Users/Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i> Yeni Kullanıcı
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered data-table" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Profil</th>
                                <th>Ad Soyad</th>
                                <th>Email</th>
                                <th>Telefon</th>
                                <th>Kayıt Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>
                                        <img src="@user.ProfileImage" class="avatar" alt="@user.FullName">
                                    </td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.CreatedDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="status-badge badge-active">AKTİF</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge badge-inactive">PASİF</span>
                                        }
                                    </td>
                                    <td class="action-btns">
                                        <a href="/Admin/Users/Edit/@user.Id" class="btn btn-sm btn-primary" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/Admin/Users/Details/@user.Id" class="btn btn-sm btn-info" title="Detaylar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <label class="switch" title="Durumu Değiştir">
                                            <input type="checkbox" @(user.IsActive ? "checked" : "")
                                                   onchange="toggleStatus(this, @user.Id, 'user')">
                                            <span class="slider"></span>
                                        </label>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>